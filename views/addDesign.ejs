<!DOCTYPE html>
<html>
<head>
  <title>Add Design</title>
</head>
<body>
  <h1>Add New Design</h1>
  <form action="/add" method="POST" enctype="multipart/form-data">
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" required><br>

    <label for="colors">Colors:</label>
    <input type="text" id="colors" name="colors" placeholder="e.g., Red, Blue, Green" required><br>
    
    <label for="fabricMaterial">Fabric Material:</label>
    <input type="text" id="fabricMaterial" name="fabricMaterial" placeholder="e.g., Cotton, Silk" required><br>
    
    <label for="dressType">Dress Type:</label>
    <select id="dressType" name="dressType" required>
      <option value="dress">Dress</option>
      <option value="suit">Suit</option>
    </select><br>
    
    <label for="personality">Personality:</label>
    <select id="personality" name="personality" multiple required>
      <option value="confident">Confident</option>
      <option value="simple">Simple</option>
      <option value="classy">Classy</option>
      <option value="unforgettable">Unforgettable</option>
      <option value="casual">Casual</option>
      <option value="unique">Unique</option>
    </select><br>
    
    <label for="other">Other Specifications:</label>
    <textarea id="other" name="other" placeholder="Any other specifications..."></textarea><br>
    
    <label for="price">Price:</label>
    <input type="number" id="price" name="price" required><br>
    
    <label for="images">Upload Images:</label>
    <input type="file" id="images" name="images" multiple required><br>
    
    <button type="submit">Add Design</button>
  </form>
</body>
</html>
